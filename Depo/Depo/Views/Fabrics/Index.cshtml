@model IEnumerable<Fabric>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kumaşlar";
}

<h1>Kumaşlar</h1>

<p>
    <a asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table">
    <table class="table table-bordered table-
striped" id="tbllist">
    <thead>
        <tr>
            <th>
                Kumaş Adı
            </th>
            <th>
                Kumaş Tonu
            </th>
            <th>
                Kalite
            </th>
            <th>
                Renk
            </th>
            <th>
                Konum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FabricId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality.QualityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Section)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.FabricId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.FabricId">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.FabricId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
