@model IEnumerable<Depo.Models.Color>

@{
    ViewData["Title"] = "Index";
}

<h1>Renk</h1>

<p>
    <a asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Renk Kodu
            </th>
            <th>
                Renk Adı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ColorCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ColorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ColorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ColorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
