<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Depo</title>

    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Depo.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: -250px;
            background-color: #1d3557;
            color: #f1f1f1;
            overflow-x: hidden;
            transition: 0.4s;
            padding-top: 60px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        }

        .sidebar a {
            padding: 12px 20px;
            text-decoration: none;
            font-size: 18px;
            color: #f1f1f1;
            display: block;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background-color: #457b9d;
            color: #ffffff;
            border-radius: 0 20px 20px 0;
        }

        .sidebar .closebtn {
            position: absolute;
            top: 15px;
            right: 25px;
            font-size: 30px;
        }

        #main {
            transition: margin-left 0.4s;
            padding: 20px;
        }

        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #1d3557;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1000;
        }

        .container {
            margin-top: 80px;
        }

        
        table.dataTable {
            border-collapse: collapse !important;
            border-radius: 10px !important;
            overflow: hidden;
        }

        
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        
        .social-footer {
            margin-top: 60px;
            padding: 20px 0;
            text-align: center;
        }

        .social-icon {
            display: inline-block;
            margin: 0 15px;
            color: white;
            background-color: #1d3557;
            width: 50px;
            height: 50px;
            line-height: 50px;
            border-radius: 50%;
            text-align: center;
            font-size: 20px;
            transition: all 0.3s ease;
        }

        .social-icon:hover {
            transform: scale(1.2);
        }

        .instagram:hover {
            background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
            color: white;
        }

        .whatsapp:hover {
            background-color: #25D366;
            color: white;
        }

        .linkedin:hover {
            background-color: #0077B5;
            color: white;
        }

            .social-icon {
                width: 40px;
                height: 40px;
                line-height: 40px;
                margin: 0 10px;
                font-size: 18px;
            }
        }
    </style>
</head>
<body>
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
        <a asp-controller="Home" asp-action="Index">🏠 Anasayfa</a>
        <a asp-controller="Home" asp-action="Privacy">🔒 Gizlilik</a>
        <a asp-controller="Fabrics" asp-action="Index">🧵 Kumaşlar</a>
        <a asp-controller="Colors" asp-action="Index">🎨 Renkler</a>
        <a asp-controller="Qualities" asp-action="Index">⭐ Kalite</a>
        <a asp-controller="Locations" asp-action="Index">📍 Depo Konumları</a>
        <a asp-controller="Entries" asp-action="Index">➕ Girişler</a>
        <a asp-controller="FabricExits" asp-action="Index">➖ Çıkışlar</a>
        <a asp-controller="Kullanicis" asp-action="Index">👤 Kullanıcılar</a>
        <a asp-controller="Home" asp-action="Logout">🚪 Log Out</a>
    </div>

    <div id="main">
        <button class="openbtn" onclick="openNav()">☰ Menü</button>
        <main role="main" class="container">
            @RenderBody()
        </main>
    </div>

    <footer class="social-footer">
        <a href="https://www.instagram.com/" target="_blank" class="social-icon instagram"><i class="fab fa-instagram"></i></a>
        <a href="https://wa.me/905555555555" target="_blank" class="social-icon whatsapp"><i class="fab fa-whatsapp"></i></a>
        <a href="https://www.linkedin.com/" target="_blank" class="social-icon linkedin"><i class="fab fa-linkedin-in"></i></a>
    </footer>

    <script>
        function openNav() {
            document.getElementById("mySidebar").style.left = "0";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.left = "-250px";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('#tbllist').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json'
                },
                responsive: true,
                paging: true,
                searching: true,
                ordering: true,
                lengthChange: true
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
