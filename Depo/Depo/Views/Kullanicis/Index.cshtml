@model IEnumerable<Depo.Models.Kullanici>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h1>Kullanıcı Listesi</h1>

<p>
    <a asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı ID</th>
            <th>Mail</th>
            <th>Şifre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                <td>@Html.DisplayFor(modelItem => item.Mail)</td>
                <td>@Html.DisplayFor(modelItem => item.Sifre)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
